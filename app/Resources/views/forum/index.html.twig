{% extends 'base.html.twig' %}

{% block title %}
    Forum
{% endblock title %}

{% block body %}

    <!-- This button redirects to /query route -->
    <div class="d-flex container-fluid justify-content-center">
        <h1>Forum</h1>
    </div>
    <!--  -->

    <!-- This button allows user create new message -->
    <div class="d-flex flex-column container justify-content-around">
        <a class="btn btn-primary" href="{{ url('forum_show_query') }}" role="button">Show query result</a>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
            Add new message
        </button>
    </div>
    <!--  -->

    <!-- Modal window for creating a message -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">New message</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="username-field">Username</label>
                            <input type="text" class="form-control" id="username-field">
                        </div>
                        <div class="form-group">
                            <label for="category-field">Category name</label>
                            <input type="password" class="form-control" id="category-field">
                        </div>
                        <div class="form-group">
                            <label for="message-field">Message text</label>
                            <textarea class="form-control" id="message-field"
                            ></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Send messages</button>
                </div>
            </div>
        </div>
    </div>
    <!--  -->

{% endblock body %}